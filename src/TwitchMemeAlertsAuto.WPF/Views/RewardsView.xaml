<UserControl
    x:Class="TwitchMemeAlertsAuto.WPF.Views.RewardsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:TwitchMemeAlertsAuto.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwitchMemeAlertsAuto.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:TwitchMemeAlertsAuto.WPF.Properties"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:views="clr-namespace:TwitchMemeAlertsAuto.WPF.Views"
    xmlns:vm="clr-namespace:TwitchMemeAlertsAuto.Core.ViewModels;assembly=TwitchMemeAlertsAuto.Core"
    d:DataContext="{d:DesignInstance Type=vm:RewardsViewModel}"
    d:Height="600"
    d:Width="200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter" />
        <CollectionViewSource
            x:Key="RewardsCV"
            Filter="CollectionViewSource_Filter"
            IsLiveFilteringRequested="True"
            IsLiveSortingRequested="True"
            Source="{Binding Rewards}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription Direction="Ascending" PropertyName="Reward.Cost" />
            </CollectionViewSource.SortDescriptions>
            <d:CollectionViewSource.Source>
                <x:Array Type="{x:Type vm:RewardViewModel}">
                    <vm:RewardViewModel />
                    <vm:RewardViewModel />
                    <vm:RewardViewModel />
                    <vm:RewardViewModel />
                    <vm:RewardViewModel />
                </x:Array>
            </d:CollectionViewSource.Source>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Header="{x:Static properties:Resources.Search}"
            Visibility="{Binding Rewards, Converter={StaticResource CollectionToVisibilityConverter}}">
            <TextBox x:Name="FilterTextBox" TextChanged="FilterTextBox_TextChanged" />
        </GroupBox>
        <GroupBox Grid.Row="1" Header="{x:Static properties:Resources.RewardsHeader}">
            <Grid>
                <ScrollViewer>
                    <ItemsControl
                        x:Name="RewardsItemsControl"
                        BorderThickness="0"
                        ItemsSource="{Binding Source={StaticResource RewardsCV}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:RewardViewModel}">
                                <views:RewardView />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <ProgressBar
                    Height="20"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    IsIndeterminate="True"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>