<UserControl
    x:Class="TwitchMemeAlertsAuto.WPF.Views.ConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:TwitchMemeAlertsAuto.WPF.Properties"
    xmlns:vm="clr-namespace:TwitchMemeAlertsAuto.Core.ViewModels;assembly=TwitchMemeAlertsAuto.Core"
    d:DataContext="{d:DesignInstance Type=vm:ConnectionViewModel}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <GroupBox Header="{x:Static properties:Resources.ConnectionsLabel}">
        <StackPanel>
            <Button
                Width="120"
                Margin="4,4,4,0"
                Padding="8"
                Command="{Binding ConnectTwitchCommand}"
                ToolTip="{x:Static properties:Resources.ConnectTwitchTooltip}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/glitch_flat_purple.ico" />
                    <TextBlock Margin="8,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{x:Static properties:Resources.ConnectLabel}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTwitchConnected}" Value="True">
                                        <Setter Property="Text" Value="{x:Static properties:Resources.Connected}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Button>
            <ProgressBar
                Width="120"
                Margin="4,0,4,0"
                IsIndeterminate="True"
                Visibility="{Binding IsCheckingTwitch, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <Button
                Width="120"
                Margin="4,8,4,0"
                Padding="8"
                Command="{Binding ConnectMemeAlertsCommand}"
                ToolTip="{x:Static properties:Resources.ConnectMemeAlertsTooltip}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/favicon-96x96.ico" />
                    <TextBlock Margin="8,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{x:Static properties:Resources.ConnectLabel}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMemeAlertsConnected}" Value="True">
                                        <Setter Property="Text" Value="{x:Static properties:Resources.Connected}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Button>
            <ProgressBar
                Width="120"
                Margin="4,0,4,4"
                IsIndeterminate="True"
                Visibility="{Binding IsCheckingMemeAlerts, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
    </GroupBox>
</UserControl>