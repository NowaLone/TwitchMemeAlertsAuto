<UserControl
    x:Class="TwitchMemeAlertsAuto.WPF.RewardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:channelPoints="clr-namespace:TwitchLib.Api.Helix.Models.ChannelPoints;assembly=TwitchLib.Api.Helix.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwitchMemeAlertsAuto.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <d:UserControl.DataContext>
        <channelPoints:CustomReward />
    </d:UserControl.DataContext>
    <StackPanel>
        <Border
            Width="75"
            Height="75"
            Background="{Binding BackgroundColor}">
            <Image Width="50" Source="{Binding Image.Url4x, Mode=OneWay}" />
        </Border>
        <TextBlock
            Text="{Binding Title}"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="4" Text="Кол-во:" />
            <TextBox
                x:Name="CountTextBox"
                Width="50"
                Margin="4"
                Text="0" />
            <Button
                Margin="4"
                Padding="4,0"
                Click="Button_Click"
                Content="Сохранить" />
        </StackPanel>
    </StackPanel>
</UserControl>
