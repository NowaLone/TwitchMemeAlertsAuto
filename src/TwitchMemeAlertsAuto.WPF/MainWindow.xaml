<Window
    x:Class="TwitchMemeAlertsAuto.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:channelPoints="clr-namespace:TwitchLib.Api.Helix.Models.ChannelPoints;assembly=TwitchLib.Api.Helix.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwitchMemeAlertsAuto.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:TwitchMemeAlertsAuto.WPF.Properties"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:views="clr-namespace:TwitchMemeAlertsAuto.WPF.Views"
    xmlns:vm="clr-namespace:TwitchMemeAlertsAuto.Core.ViewModels;assembly=TwitchMemeAlertsAuto.Core"
    Title="{x:Static properties:Resources.MainWindowTitle}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <views:MainMenuView
            Grid.Row="0"
            Grid.ColumnSpan="6"
            DataContext="{Binding MainMenuViewModel}" />
        <views:AllRewardView
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Top"
            DataContext="{Binding AllRewardViewModel}" />
        <views:RewardsView
            Grid.Row="1"
            Grid.Column="1"
            DataContext="{Binding RewardsViewModel}" />
        <GridSplitter
            Grid.Row="1"
            Grid.Column="2"
            Width="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch" />
        <views:SupportersView
            Grid.Row="1"
            Grid.Column="3"
            DataContext="{Binding SupportersViewModel}" />
        <GridSplitter
            Grid.Row="1"
            Grid.Column="4"
            Width="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch" />
        <views:LogView
            Grid.Row="1"
            Grid.Column="5"
            DataContext="{Binding LogViewModel}" />
    </Grid>
</Window>