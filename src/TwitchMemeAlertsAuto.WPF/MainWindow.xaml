<Window
    x:Class="TwitchMemeAlertsAuto.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:channelPoints="clr-namespace:TwitchLib.Api.Helix.Models.ChannelPoints;assembly=TwitchLib.Api.Helix.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwitchMemeAlertsAuto.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="tmaa"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <Button
                x:Name="ConnectTwitchButton"
                Width="160"
                Margin="5"
                Click="ConnectTwitchButton_Click">
                <TextBlock>
                    <Run Text="Подключить Twitch" />
                    <Run x:Name="ConnectTwitchButtonStausRun" Text="..." />
                </TextBlock>
            </Button>
            <Button
                x:Name="ConnectMemeAlertsButton"
                Grid.Row="1"
                Width="160"
                Margin="5"
                Click="ConnectMemeAlertsButton_Click">
                <TextBlock>
                    <Run Text="Подключить MemeAlerts" />
                    <Run x:Name="ConnectMemeAlertsButtonStatusRun" Text="..." />
                </TextBlock>
            </Button>
        </StackPanel>
        <GroupBox
            Grid.Row="3"
            Grid.Column="0"
            Header="Награды">
            <ScrollViewer>
                <ItemsControl x:Name="RewardsListView" BorderThickness="0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="channelPoints:CustomReward">
                            <local:RewardControl DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
        <GroupBox
            Grid.RowSpan="3"
            Grid.Column="1"
            Header="Лог">
            <ScrollViewer>
                <ItemsControl x:Name="LogListView">
                    <d:ListView.Items>
                        <TextBlock Text="Выдано 10 мемов" />
                    </d:ListView.Items>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>